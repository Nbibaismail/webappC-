@model IEnumerable<Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Film List</h1>

<p>
    
    <a asp-action="Create" class="btn btn-primary mx-2"><i class="bi bi-plus"></i>Add New Film</a>
</p>
<form asp-controller="Films" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table table-bordered table-striped table-hover" style="width:100%">
    <thead class="bg-danger">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.catId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
@foreach (var item in Model) {
        <tr>
            <td class="bg-white">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td class="bg-white">
                <a href="@Html.DisplayFor(modelItem => item.Image)"><img style="display:block;" width="10%" height="10%" src="@Html.DisplayFor(modelItem => item.Image)" /></a>
                

                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catId)
            </td>
            <td class="bg-white">
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                <div class="w-75 btn-group" role="group">

                <a asp-action="Edit" asp-route-id="@item.Id"
                    class="btn btn-primary mx-2"><i class="bi bi-pencil"></i>Edit</a>

                <a asp-action="Details" asp-route-id="@item.Id"
                    class="btn btn-primary mx-2"><i class="bi bi-box-arrow-in-right"></i>Details</a>
                 <a asp-action="Delete" asp-route-id="@item.Id"
                    class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                
                

                </div>
               
            </td>
        </tr>
}
    </tbody>
</table>
